{
  "name": "documentation-generator",
  "displayName": "Documentation Generator",
  "description": "Extension for generating documentation using Claude Code Pro",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "documentation-generator.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "documentation-generator.generateDocs",
        "title": "Generate Documentation",
        "icon": "$(file-text)"
      },
      {
        "command": "documentation-generator.selectTemplate",
        "title": "Select Template",
        "icon": "$(list-selection)"
      },
      {
        "command": "documentation-generator.openSettings",
        "title": "Open Settings",
        "icon": "$(settings-gear)"
      },
      {
        "command": "documentation-generator.refreshSidebar",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "documentation-generator.generateHelpDocs",
        "title": "üìã Help Documentation",
        "icon": "$(question)"
      },
      {
        "command": "documentation-generator.generatePRD",
        "title": "üìä PRD (Product Requirements)",
        "icon": "$(project)"
      },
      {
        "command": "documentation-generator.generateTechSpec",
        "title": "‚öôÔ∏è Technical Specification",
        "icon": "$(gear)"
      },
      {
        "command": "documentation-generator.generateMeetingSummary",
        "title": "ü§ù Meeting Summary",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "documentation-generator.generateCustomDocs",
        "title": "üìù Custom Documentation",
        "icon": "$(edit)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "documentationGenerator",
          "name": "Documentation Generator",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "documentationGeneratorContainer",
          "title": "Documentation Generator",
          "icon": "$(file-text)"
        }
      ]
    },
    "submenus": [
      {
        "id": "documentation-generator.submenu",
        "label": "Generate Documentation"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "documentation-generator.refreshSidebar",
          "when": "view == documentationGenerator",
          "group": "navigation"
        },
        {
          "command": "documentation-generator.openSettings",
          "when": "view == documentationGenerator",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "documentation-generator.generateDocs",
          "when": "view == documentationGenerator && viewItem == action",
          "group": "inline"
        }
      ],
      "explorer/context": [
        {
          "submenu": "documentation-generator.submenu",
          "when": "explorerResourceIsFolder",
          "group": "documentation@1"
        }
      ],
      "documentation-generator.submenu": [
        {
          "command": "documentation-generator.generateHelpDocs",
          "when": "explorerResourceIsFolder",
          "group": "templates@1"
        },
        {
          "command": "documentation-generator.generatePRD",
          "when": "explorerResourceIsFolder",
          "group": "templates@2"
        },
        {
          "command": "documentation-generator.generateTechSpec",
          "when": "explorerResourceIsFolder",
          "group": "templates@3"
        },
        {
          "command": "documentation-generator.generateMeetingSummary",
          "when": "explorerResourceIsFolder",
          "group": "templates@4"
        },
        {
          "command": "documentation-generator.generateCustomDocs",
          "when": "explorerResourceIsFolder",
          "group": "templates@5"
        }
      ]
    },
    "keybindings": [
      {
        "command": "documentation-generator.generateDocs",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "explorerViewletVisible"
      },
      {
        "command": "documentation-generator.selectTemplate",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t"
      },
      {
        "command": "documentation-generator.openSettings",
        "key": "ctrl+shift+comma",
        "mac": "cmd+shift+comma"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Documentation Generator",
      "properties": {
        "documentation-generator.templateDirectory": {
          "type": "string",
          "default": "",
          "description": "Custom template directory path"
        },
        "documentation-generator.outputNamePattern": {
          "type": "string",
          "default": "generated-docs-{template}-{date}",
          "description": "Pattern for output file naming. Use {template}, {date}, {folder} as variables"
        },
        "documentation-generator.claudeIntegrationMethod": {
          "type": "string",
          "enum": ["slash-commands", "mcp-server"],
          "default": "slash-commands",
          "description": "Method for Claude Code integration"
        },
        "documentation-generator.autoRefreshSidebar": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh sidebar when templates change"
        },
        "documentation-generator.showProgressNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show progress notifications during documentation generation"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:unit": "jest",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "testPathIgnorePatterns": ["<rootDir>/src/test/extension.test.ts"],
    "setupFilesAfterEnv": ["<rootDir>/src/test/setup.ts"],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/test/**/*"
    ]
  }
}
